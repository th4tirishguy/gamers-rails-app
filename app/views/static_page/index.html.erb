<h1>Find people to play with</h1>

<% @player.errors.full_messages.each do |error| %>
  <p><%= error %></p>
<% end %>

<%= form_for @player, url: {action: "create", controller: "player"} do |f| %>
	<div class="form-group">
		<%= label_tag(:system, "System") %>
		<!-- <select name="system">
			<option value="xbox">Xbox</option>
			<option value="xbox">Playstation</option>
			<option value="xbox">Steam</option>
		</select> -->
		<%= f.select(:system, ['Xbox', 'Playstation', 'Steam']) %>
	</div>
	<div class="form-group">
		<%= label_tag(:name, "Name (eg. gamertag, psn, steam id") %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= label_tag(:country, "Country") %>
		<%= f.text_field :country %>
	</div>
	<div class="form-group">
		<%= label_tag(:microphone, "Do you have a microphone?") %>
		<%= f.check_box :microphone %>
	</div>
	<%= f.submit "Submit" %>
<% end %>

<h2>All Players</h2>

<p>
	Filter by system
	<select id="filter-players">
		<option class="sort" data-sort="All" value="All">All</option>
		<option class="sort" data-sort="Xbox" value="Xbox">Xbox</option>
		<option class="sort" data-sort="Playstation" value="Playstation">Playstation</option>
		<option class="sort" data-sort="Steam" value="Steam">Steam</option>
	</select>
</p>
<ul class="players-list">
	<li class="title"><span class="title-text">System</span><span class="title-text">Player Name</span><span class="title-text">Country</span>
		<span class="title-text">Has Microphone</li>
</ul>

<ul class="players-list" id="players-list">

</ul>
